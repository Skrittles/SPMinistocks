                    <TextView android:id="@+id/text23" style="@style/StockPrice"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/widget_midright"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:background="#ffff0000">

            <!-- Upper side of inner TextViews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Stock Symbol -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="3dp"
                    android:orientation="horizontal">
                    <TextView android:id="@+id/text41" style="@style/StockName"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Down side of inner TextViews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Change -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">
                    <TextView android:id="@+id/text42" style="@style/StockWideChange"/>
                </LinearLayout>

                <!-- Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:orientation="horizontal">
                    <TextView android:id="@+id/text43" style="@style/StockPrice"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        </LinearLayout>L
    </LinearLayout>
</RelativeLayout>